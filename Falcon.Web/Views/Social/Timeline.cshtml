@using Falcon.Domain.Models
@model Falcon.Domain.Models.Freelancer

@{
    ViewBag.Title = "Timeline";
    Layout = "~/Views/Shared/_FalconSocialLayout.cshtml";
    var ftp = "ftp://falcon:falcon@localhost/";
}
<div class="container">
    <div class="cover profile">
        <div class="wrapper">
            <div class="image">
                <img src="~/Content/social/images/profile-cover.jpg" alt="people" />
            </div>
            <ul class="friends">
                @{
                    foreach (Freelancer friend in Model.Freelancers)
                    {
                        <li>
                            <a href="@Url.Action("Details","Freelancer",new{id=friend.idMember})">
                                <img src="@ftp@friend.Member.Document.path" alt="people" class="img-responsive">
                            </a>
                        </li>
                    }
                }
            </ul>
        </div>
        <div class="cover-info">
            <div class="avatar">
                <img src="@ftp@Model.Member.Document.path" alt="people" />
            </div>
            <div class="name">
                <a href="#">
                    @Model.Member.firstname @Model.Member.lastname
                </a>
            </div>
            <ul class="cover-nav">
                <li class="active">
                    <a href="@Url.Action("Timeline")"><i class="fa fa-fw icon-ship-wheel"></i> Timeline</a>
                </li>
                <li>
                    <a href="@Url.Action("PublicProfile",new{id=Model.idMember})"><i class="fa fa-fw icon-user-1"></i> About</a>
                </li>
            </ul>
        </div>
    </div>
    <div class="row">
        <div class="col-md-9">
            <ul class="timeline-list">

                <li class="media">
                    <div class="pull-left">
                        <img src="@ftp@Model.Member.Document.path" alt="people" class="img-circle" width="80" />
                        <div class="date">@DateTime.Now.Day @DateTime.Now.Month </div>
                    </div>
                    <div class="media-body">
                        <div class="row">
                            <div class="col-md-10 col-lg-8">
                                <div class="panel panel-default share">
                                    <div class="panel-heading panel-heading-gray title">
                                        What&acute;s new
                                    </div>
                                    <div class="panel-body">
                                        <textarea name="status" class="form-control share-text" rows="3" placeholder="Share your status..."></textarea>
                                    </div>
                                    <div class="panel-footer share-buttons">
                                        <a href="#">
                                            <i class="fa fa-map-marker"></i>
                                        </a>
                                        <a href="#">
                                            <i class="fa fa-photo"></i>
                                        </a>
                                        <a href="#">
                                            <i class="fa fa-video-camera"></i>
                                        </a>
                                        <button type="submit" class="btn btn-primary btn-xs pull-right display-none" href="#">Post</button>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="clearfix"></div>
                    </div>
                </li>
                @{
                    foreach (var circle in Model.Circles)
                    {
                        <li class="media">
                            <div class="pull-left">
                                <img src="@ftp@Model.Member.Document.path" alt="people" class="img-circle" width="80">
                                <div class="date">11 OCT</div>
                            </div>
                            <div class="media-body">
                                <div class="panel panel-default">
                                    <div class="panel-heading">
                                        <div class="media">
                                            <a href="" class="pull-left">
                                                <img src="@ftp@Model.Member.Document.path" class="media-object">
                                            </a>
                                            <div class="media-body">
                                                <a href="#" class="pull-right text-muted"><i class="icon-reply-all-fill fa fa-2x "></i></a>
                                                <a href="">@Model.Member.firstname</a>
                                                <span>on 15th January, 2014</span>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="panel-body">
                                        @circle.name
                                    </div>
                                    <div class="videoWrapper">
                                        <p>@circle.description</p>
                                </div>
                                <div class="view-all-comments"><i class="fa fa-comments-o"></i> Be the first to comment</div>
                                <ul class="comments">
                                    <li class="comment-form">
                                        <div class="input-group">
                                            <input type="text" class="form-control">
                                            <span class="input-group-addon">
                                                <a href=""><i class="fa fa-photo"></i></a>
                                            </span>
                                        </div>
                                    </li>
                                </ul>
                            </div>
                        </div>
                    </li>
                    }
                }
            </ul>
        </div>
    </div>
</div>